@model ExamProject.Models.viewModel.ModelVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Marques" class="control-label"></label>
                <select asp-for="Model.MarqueID" asp-items="@(new SelectList(Model.Marques,"Id","NomMarque"))" ></select>
               
            </div>
            <div class="form-group">
                <label asp-for="Model.NomModel" class="control-label"></label>
                <input asp-for="Model.NomModel" class="form-control" />
                <span asp-validation-for="Model.NomModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
