@model ExamProject.Models.viewModel.ModelVM
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@_localizer["Edit Model"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <input hidden asp-for="Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label class="control-label">@_localizer["Makes"]</label>
                <select asp-for="Model.MarqueID" asp-items="@(new SelectList(Model.Marques,"Id","NomMarque"))"></select>

            </div>
            <div class="form-group">
                <label class="control-label">@_localizer["Name of Model"]</label>
                <input asp-for="Model.NomModel" class="form-control" />
                <span asp-validation-for="Model.NomModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@_localizer["Edit"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
