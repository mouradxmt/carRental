@model IEnumerable<ApplicationUser>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "The Blacklist";
}

    <h2>@_localizer["blacklist"]</h2>
<table class="ui table striped">
    <thead>
        <tr>
            <th>
                @_localizer["First Name"]
            </th>
            <th>
                @_localizer["Last Name"]
            </th>
            <th>
                @_localizer["Phone Number"]
            </th>
            <th>
                @_localizer["Email"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="GiveRole" asp-route-id="@item.Id" class="ui tiny labeled icon button green"><i class=" ui icon warning"></i>@_localizer["Remove from blacklist"]</a>
            </td>
        </tr>
        }
    </tbody>
</table>

