@model IEnumerable<ExamProject.Models.Demande>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "demandes";
}

<h2>demandes</h2>

<p>

</p>
<table class="ui striped table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.voitureid)
            </th>
            <th>
                @_localizer["Duration"]
            </th>
            <th>
                @_localizer["Total price"]
            </th>
            <th>
                @_localizer["state"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.voitureid)
                </td>
                <td>
                    De @item.location.DateFin à @item.location.DateDebut
                </td>
                <td>
                    @item.location.PrixTotal
                </td>
                <td>
                    @item.etat
                </td>
                <td>
                    <a class="ui green button" asp-action="accepter" asp-route-id="@item.Id">accepter</a> 
                    <a class="ui red button" asp-action="rejter" asp-route-id="@item.Id">rejeter</a> 

                </td>
            </tr>
        }
    </tbody>
</table>
