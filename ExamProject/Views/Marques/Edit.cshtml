@model ExamProject.Models.Marque
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Edit";
}

<h1>@_localizer["Edit"]</h1>

<h4>@_localizer["Edit"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@_localizer["Make Name"]</label>
                <input asp-for="NomMarque" class="form-control" />
                <span asp-validation-for="NomMarque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@_localizer["Edit"] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
