@page
@model RegisterModel
@using ExamProject.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Register";
}

<style type="text/css">

    body {
        background-color: #DADADA;
    }

        body > .grid {
            height: 100%;
        }

    .image {
        margin-top: -100px;
    }

    .column {
        max-width: 450px;
    }
</style>

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui red image header">
            <span class="content">
                @_localizer["Creer votre compte"]
            </span>
        </h2>
        <form method="post" class="ui large form">
            <div class="ui stacked segment">

                <div asp-validation-summary="All"></div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input asp-for="Input.Nom" class="form-control" placeholder="@_localizer["Nom"]" />
                    </div>
                    <span asp-validation-for="Input.Nom"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input asp-for="Input.Prenom" class="form-control" placeholder="@_localizer["Prenom"]" />
                    </div>
                    <span asp-validation-for="Input.Prenom"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="phone icon"></i>
                        <input asp-for="Input.Tele" class="form-control" placeholder="@_localizer["Numero de telephone"]" />
                    </div>
                    <span asp-validation-for="Input.Tele"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="address book outline icon"></i>
                        <input asp-for="Input.Ville" class="form-control" placeholder="@_localizer["Ville"]" />
                    </div>
                    <span asp-validation-for="Input.Ville"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="envelope icon"></i>
                        <input asp-for="Input.Email" class="form-control" placeholder="@_localizer["Adresse e-mail"]" />
                    </div>
                    <span asp-validation-for="Input.Email"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Input.Password" class="form-control" placeholder="@_localizer["Mot de passe"]" />
                    </div>
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@_localizer["Confirmer mot de passe"]" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword"></span>
                </div>

                <div class="field">
                    <select id="selectagence" class="ui dropdown" onchange="showAgencyName(this.value)">
                        <option value="false">@_localizer["Particulier"]</option>
                        <option value="true">@_localizer["Agence"]</option>

                    </select>
                </div>
                <div class="field" id="agenceName" style="display:none">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Input.agencename" class="form-control" placeholder="@_localizer["Nom de l'agence"]" />
                    </div>
                    <span asp-validation-for="Input.agencename"></span>
                </div>
                @if (User.IsInRole(Roles.Admin))
                {
                    <div class="ui message">

                        <label asp-for="Input.IsAdmin"></label>
                        <input asp-for="Input.IsAdmin" class="form-control" />

                    </div>
                }
                <button type="submit" class="btn btn-default ui fluid large red submit button">@_localizer["Créer un compte"]</button>

            </div>

            <div class="ui error message"></div>

        </form>


        @*@if (User.IsInRole(Roles.Admin))
            {*@

        @*}*@

    </div>
</div>
<script>

    function showAgencyName(isAgency) {

        if (isAgency == 'true') {
            document.querySelector('#agenceName').style.display = 'block';

        } else {
            document.querySelector('#agenceName').style.display = 'none';
        }
    }




</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}