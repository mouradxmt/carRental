@page
@model LoginModel
@using ExamProject.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "Log in";
}
<style type="text/css">

    body {
        background-color: #DADADA;
    }

        body > .grid {
            height: 100%;
        }

    .image {
        margin-top: -100px;
    }

    .column {
        max-width: 450px;
    }
</style>

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui red image header">
            <span class="content">
                @_localizer["Login"]
            </span>
        </h2>
        <form method="post" class="ui large form">
            <div class="ui stacked segment">

                <div asp-validation-summary="All"></div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input asp-for="Input.UserName" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.UserName"></span>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Input.Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div class="ui checkbox">
                    <input asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>



                </div>
                <button type="submit" class="btn btn-default ui fluid large red submit button">@_localizer["Login"]</button>

            </div>

            <div class="ui error message"></div>

        </form>

        <div class="ui message">
            <a asp-page="./ForgotPassword">@_localizer["Forgot Password?"]</a><br />
            @_localizer["You d'ont have account?"]<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@_localizer["Register"]</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
